      </panel>
      <panel
            class="org.polymap.p4.layer.FeaturePanel"
            id="org.polymap.p4.FeaturePanel">
      </panel>
      <panel
            class="org.polymap.p4.style.LayerStylePanel"
            id="org.polymap.p4.LayerStylePanel">
      </panel>
      <panel
            class="org.polymap.p4.catalog.MetadataInfoPanel"
            id="org.polymap.p4.panel1">
      </panel>
      <panel
            class="org.polymap.p4.layer.LayersCatalogsPanel"
            id="org.polymap.p4.LayersCatalogsPanel"
            stackPriority="100">
      </panel>
