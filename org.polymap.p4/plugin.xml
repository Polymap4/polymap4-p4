   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="Polymap4 Product">
         <property
               name="appName"
               value="Polymap4 Product">
         </property>
      </product>
   </extension>
   <extension
         id="org.polymap.p4.app"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.polymap.p4.P4Application">
         </run>
      </application>
